.mandatory{color:red;}
.error_1{color:red !important;}

.btns-success{
	background-image:url("../images/active.png");
	background-repeat: no-repeat;
    background-size: auto;
    background-position: center;
    top: 0px;
    position: relative;
    display: inline-block;
    padding-bottom: 9px;
    text-align: center;
}
.btns-success:hover, .btn-sm:hover .btns-success{background-image:url("../images/active_h.png");}

.btns-danger{
	background-image:url("../images/inactive.png");
	background-repeat: no-repeat;
    background-size: auto;
    background-position: center;
    top: 0px;
    position: relative;
    display: inline-block;
    padding-bottom: 9px;
    text-align: center;
}
.btns-danger:hover, .btn-sm:hover .btns-danger{background-image:url("../images/inactive_h.png");}

.nav-link { display: block; padding: .5rem .5rem;}
.modal-dialog .page_details .content-wrapper{ margin-left:0px;}

.paginate_button{   
	display: inline-block;
    padding: 1px 5px;
    border: 1px solid #ccc;
    border-radius: 3px;
    margin: 0px 2px;
    cursor: pointer;color:#252525;}
	
	
.paginate_button:hover{ border: 1px solid #007bff; color:#007bff;}
#example1_filter input{border: 1px solid #ccc;  border-radius: 3px;  padding: 3px 5px;}
input[type="search"]{border: 1px solid #ccc;  border-radius: 3px;  padding: 3px 5px;}

.popup_title{ margin-top:-62px !important;}
.popup_title2{    margin-top: -46px !important; font-size: 28px;}

.card-body .validatr-message{ width: 55%; font-size: 14px;}

.add-adv-btn{ position: relative; top: 57px; left: 20px; width: 50%;}
.business_back .add-adv-btn{ position: relative; top: 57px; left: 20px; width: 30%;}

.mb-10{ margin-bottom:10px;}
.mb-15{ margin-bottom:15px;}


.has-feedback {
    position: relative;
}
.has-feedback .form-control {
    padding-right: 42.5px;
}
.form-control-feedback {
    position: absolute;
    top: 0;
    right: 0;
    z-index: 2;
    display: block;
    width: 34px;
    height: 34px;
    line-height: 34px;
    text-align: center;
    pointer-events: none;
}
.parsley-errors-list{ color:red; padding:0px; margin:0; list-style:none;}
.parsley-errors-list li{ list-style:none;}

.add-s-page{ position:relative}
.add-s-page .parsley-errors-list {position: absolute;
bottom: 0;}

.form-control-feedback.fa {
    line-height: 36px;
}



