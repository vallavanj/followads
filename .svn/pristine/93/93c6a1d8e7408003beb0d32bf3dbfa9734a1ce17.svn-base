<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Validatr</title>
    <style>
    form {
        width: 300px;
        height: 150px;
        padding: 10px;
        margin: 20px;
        border: 1px solid #ccc;
        float: left;
    }
    .field {
        margin-bottom: 10px;
    }

    label {
        display: inline-block;
        width: 100px;
    }
    </style>
    <script src="../libs/jquery/jquery.js"></script>
    <script src="js/validatr.js"></script>
    <script>
    $(function () {
        $('form').validatr();
    });
    </script>
</head>
<body>
    <form id="colorform" action="./">
        <div class="field"><label for="color">Color</label><input type="color" id="color" name="color" required data-message="Add a color already"></div>
        <input type="reset">
        <input type="submit" value="Submit">
    </form>
    <form action="./">
        <div class="field"><label for="date">Date</label><input type="date" id="date" min="2013-03-19" max="2013-03-21" step="2" name="date" required></div>
        <input type="reset">
        <input type="submit" value="Submit">
    </form>
    <form action="./">
        <div class="field"><label for="datetime">Datetime</label><input type="datetime" id="datetime" name="datetime" required></div>
        <input type="reset">
        <input type="submit" value="Submit">
    </form>
    <form action="./">
        <div class="field"><label for="datetime-local">Datetime-local</label><input type="datetime-local" id="datetime-local" name="datetime-local" required></div>
        <input type="reset">
        <input type="submit" value="Submit">
    </form>
    <form action="./">
        <div class="field"><label for="month">Month</label><input type="month" id="month" min="2013-03" max="2013-03" name="month" required></div>
        <input type="reset">
        <input type="submit" value="Submit">
    </form>
    <form action="./">
        <div class="field"><label for="email">Email</label><input type="email" id="email" name="email" multiple required></div>
        <input type="reset">
        <input type="submit" value="Submit">
    </form>
    <form action="./">
        <div class="field"><label for="number">Number</label><input type="number" id='number' step=0 min=5 max=7 name="number" required></div>
        <input type="reset">
        <input type="submit" value="Submit">
    </form>
    <form action="./">
        <div class="field"><label for="range">Range</label><input type="range" id="range" step="2" min="1" max="10" name="range" required></div>
        <input type="reset">
        <input type="submit" value="Submit">
    </form>
    <form action="./">
        <div class="field"><label for="tel">Tel</label><input type="tel" id="tel" name="tel" required></div>
        <input type="reset">
        <input type="submit" value="Submit">
    </form>
    <form action="./">
        <div class="field"><label for="text">Text</label><input type="text" id="text" name="text" required></div>
        <input type="reset">
        <input type="submit" value="Submit">
    </form>
    <form action="./">
        <div class="field"><label for="time">Time</label><input type="time" id="time" name="time" required></div>
        <input type="reset">
        <input type="submit" value="Submit">
    </form>
    <form action="./">
        <div class="field"><label for="url">Url</label><input type="url" id="url" name="url" required></div>
        <input type="reset">
        <input type="submit" value="Submit">
    </form>
    <form action="./">
        <div class="field"><label for="week">Week</label><input type="week" id="week" name="week" required></div>
        <input type="reset">
        <input type="submit" value="Submit">
    </form>
    <form action="./">
        <div class="field"><label for="checkbox">Checkbox</label><input type="checkbox" id="checkbox" name="checkbox" value="1" required></div>
        <input type="reset">
        <input type="submit" value="Submit">
    </form>
    <form action="./">
        <div class="field"><label for="select">Select</label><select required name="select" id="select"><option value="">Empty</option><option value="1">First</option><option value="2">Second</option></select></div>
        <div class="field"><label for="selectmultiple">Select Multiple</label><select required name="selectmultiple" id="selectmultiple" multiple><option value="1">First</option><option value="2">Second</option></select></div>
        <input type="reset">
        <input type="submit" value="Submit">
    </form>
    <form action="./">
        <div class="field">
            <div><input type="radio" id="radio1" name="radio" value="1" data-location="top" required>
                        <label for="radio1">Radio 1</label></div>
            <div><input type="radio" id="radio2" name="radio" value="2">
                        <label for="radio2">Radio 2</label></div>
            <div><input type="radio" id="radio3" name="radio" value="3">
                        <label for="radio3">Radio 3</label></div>
        </div>
        <input type="reset">
        <input type="submit" value="Submit">
    </form>
</body>
</html>
